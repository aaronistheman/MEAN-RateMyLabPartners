<!DOCTYPE html>
<html>
  <head>
    <title>RateMyLabPartners</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Bootstrap CDN -->
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <!-- AngularJS CDNs -->
   	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="rateMyLabPartners">

    <!--
    <div>
      <h1>Rate My Lab Partners</h1>
    </div>
    -->

    <!-- Navigation bar -->
    <nav class="navbar navbar-default pull-right"
      ng-controller="NavCtrl">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()">
          <a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register
          </a></li>
      </ul>
    </nav>

    <!-- Specify where to render the current AngularJS template -->
    <ui-view></ui-view>

    <script type="text/ng-template" id="/home.html">

      <!-- Search bar for user to search for college -->
      <span>Search for your college:</span>
      <input list="colleges" />
      <datalist id="colleges">
        <option ng-repeat="college in colleges"
          value="{{ college.title }}" />
      </datalist>
    
    </script> <!-- home.html -->



    <script type="text/ng-template" id="/register.html">
      <div ng-show="error">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="register()">
        <h3>Register</h3>

        <input type="text" placeholder="Username"
          ng-model="user.username" />
        <input type="password" placeholder="Password"
          ng-model="user.password" />
        <button type="submit">Register</button>
      </form>

      <br />
      <a href="/#/home">Back</a>
    </script> <!-- register.html -->



    <script type="text/ng-template" id="/login.html">
      <div ng-show="error">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="logIn()">
        <h3>Log In</h3>

        <input type="text" placeholder="Username"
          ng-model="user.username" />
        <input type="password" placeholder="Password"
          ng-model="user.password" />
        <button type="submit">Log In</button>
      </form>

      <br />
      <a href="/#/home">Back</a>
    </script> <!-- login.html -->

    <!--
    <form action="/test" method="post">
    	<input type="text" name="info" />
    </form>
    -->
  </body>
</html>
